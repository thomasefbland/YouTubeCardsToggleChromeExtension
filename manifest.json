{
    "name": "YouTube End Cards Toggle",
    "description": "Adds a button to the YouTube player that toggles on & off the End Cards",
    "author": "Thomas Bland",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [ "tabs", "scripting" ],
    
    "host_permissions": ["https://*.youtube.com/*"],

    "content_scripts": [{
        "matches": [ "*://*.youtube.com/*" ],
        "js": [ "content.js" ],
        "css": [ "content.css" ],
        "run_at": "document_start"
    }]
  }